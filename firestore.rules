rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    // User profiles
    match /users/{uid} {
      allow create: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.nickname is string
        && request.resource.data.nicknameLower is string
        && request.resource.data.nicknameLower == lower(request.resource.data.nickname)
        && request.resource.data.nicknameLower.size() >= 3
        && request.resource.data.nicknameLower.size() <= 20
        && request.resource.data.nicknameLower.matches('^[a-z0-9._]+$')
        && request.resource.data.fullName is string
        && request.resource.data.fullName.size() > 0
        && request.resource.data.fullNameLower is string
        && request.resource.data.fullNameLower == lower(request.resource.data.fullName);

      allow update: if isSignedIn()
        && request.auth.uid == uid
        && (!request.resource.data.keys().hasAny(['isPrivate'])
          || request.resource.data.isPrivate is bool);

      allow read: if true;
    }

    // Notifications per user
    match /users/{uid}/notifications/{nid} {
      allow read: if isSignedIn() && request.auth.uid == uid;
      allow create: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.type is string
        && request.resource.data.senderId is string
        && request.resource.data.createdAt is timestamp
        && request.resource.data.read is bool;
      // Prevent flipping read back to false
      allow update: if isSignedIn()
        && request.auth.uid == uid
        && request.resource.data.read == true
        && resource.data.read == false;
      allow delete: if false;
    }

    // Follow requests live under the receiver.
    match /users/{uid}/followRequests/{senderId} {
      allow create: if isSignedIn()
        && request.auth.uid == senderId
        && request.resource.data.senderId == request.auth.uid
        && request.resource.data.receiverId == uid
        && request.resource.data.status == 'pending'
        && request.resource.data.createdAt is timestamp;
      allow update: if isSignedIn()
        && request.auth.uid == uid
        && resource.data.status == 'pending'
        && (request.resource.data.status == 'accepted'
          || request.resource.data.status == 'rejected');
      // Allow either sender or receiver to delete (cancel/reject).
      allow delete: if isSignedIn()
        && (request.auth.uid == uid || request.auth.uid == senderId);
      allow read: if isSignedIn()
        && (request.auth.uid == uid || request.auth.uid == senderId);
    }

    // Following collections
    match /following/{ownerId}/users/{targetId} {
      allow read: if isSignedIn();
      // Owner writes their outgoing follows, or receivers can write when accepting.
      allow write: if isSignedIn()
        && (request.auth.uid == ownerId || request.auth.uid == targetId);
    }

    match /followers/{ownerId}/users/{followerId} {
      allow read: if isSignedIn();
      // Follower writes when following, receiver writes when accepting.
      allow write: if isSignedIn()
        && (request.auth.uid == followerId || request.auth.uid == ownerId);
    }
  }
}
